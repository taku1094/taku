<div>
<div id="main">    
    <%= image_tag 'main-img.jpg' %>
</div>    

<div id="article_wrap">

<% @posts.each do|post| %>
    <div id="article_list">
   
        <h2><%= link_to post.title,"/posts/#{post.id}" %></h2>
        <p><%= post.created_at.strftime("%Y年%m月%d日") %></p>
    <div>
     <% if user_signed_in? %>
   
        <p><%= link_to "編集","/posts/#{post.id}/edit" %></p>
        <p><%= link_to "削除","/posts/#{post.id}/destroy",{method: "post"} %></p>
    
    </div>
    
    </div>
     <% end %>
    <% end %>

    </div>
  
    
    
    
    
</div>